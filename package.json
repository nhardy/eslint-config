{
  "name": "eslint-config-nhardy",
  "version": "0.3.1",
  "description": "ESLint config similar to that used by 9Technology",
  "main": "index.js",
  "scripts": {
    "build": "babel ./src --source-maps --out-dir ./dist",
    "clean": "GLOBIGNORE=.gitignore:.npmignore rm -rf ./dist/*",
    "flow-typed": "flow-typed install --overwrite",
    "flow": "flow",
    "lint": "eslint ./src",
    "lint:fix": "npm run lint -- --fix",
    "preversion": "npm run build",
    "postversion": "git push --follow-tags",
    "start": "npm run clean && npm run build",
    "test": "npm run lint:fix && npm run flow",
    "watch": "npm run clean && babel ./src --source-maps --watch --out-dir ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhardy/eslint-config.git"
  },
  "keywords": [
    "eslint",
    "config",
    "nhardy",
    "mi9",
    "9Digital",
    "9Technology"
  ],
  "author": "Nathan Hardy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nhardy/eslint-config/issues"
  },
  "homepage": "https://github.com/nhardy/eslint-config#readme",
  "dependencies": {
    "babel-eslint": "^7.2.3",
    "eslint-config-airbnb": "^14.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-preset-es2016": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.18.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-mocha": "^4.5.1",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "^0.44.2",
    "flow-typed": "^2.1.1"
  },
  "peerDependencies": {
    "eslint": "^3.18.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-mocha": "^4.9.0",
    "eslint-plugin-react": "^6.10.3"
  }
}
